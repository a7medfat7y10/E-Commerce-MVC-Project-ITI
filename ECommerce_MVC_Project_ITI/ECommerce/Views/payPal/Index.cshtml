@{
    ViewData["Title"] = "Pay with PayPal";
}
@{
    Layout = null;
}

<h1>@ViewData["Title"]</h1>

<p>Click the button below to pay with PayPal:</p>

<div id="paypal-button-container"></div>

<script src="https://www.paypal.com/sdk/js?client-id=ATOYRbaMQDeT4tUuhvpKZv-4tQc-xgH2ZKmvbiE0HQOFJoFPlEKxPUOggpSgCW3vGx-NFxew2E-MWekQ"></script>
<script>
    paypal.Buttons({
        createOrder: function (data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: {
                        value: '100.00'
                    }
                }]
            });
        },
        onApprove: function (data, actions) {
            return actions.order.capture().then(function (details) {
                console.log(details);
                // TODO: handle successful payment response
            });
        }
    }).render('#paypal-button-container');
</script>